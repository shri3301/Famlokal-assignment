# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# MySQL Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=product_db
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=app:

# Redis Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OAuth2 Client Credentials (Optional - for testing OAuth integration)
OAUTH_TOKEN_URL=https://auth.example.com/oauth2/token
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret
OAUTH_SCOPE=api.read
OAUTH_TOKEN_CACHE_KEY=oauth:access_token
OAUTH_TOKEN_LOCK_KEY=oauth:token_refresh_lock
OAUTH_TOKEN_LOCK_TTL=30

# External API Configuration (Uses JSONPlaceholder for demo)
EXTERNAL_API_BASE_URL=https://jsonplaceholder.typicode.com
EXTERNAL_API_TIMEOUT=5000
EXTERNAL_API_RETRY_ATTEMPTS=3
EXTERNAL_API_RETRY_DELAY=1000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_IDEMPOTENCY_TTL=86400

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7
